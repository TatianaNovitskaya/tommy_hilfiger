.bottom-info {
	padding: 6.4rem 0 0rem
	position: relative
}

.bottom-info__title {
	width: 84%
}

.bottom-info__products {
	margin: 3.8rem 0 0 1.3rem;
	
	.info__product-item {
		&:first-child {
			margin-right: 1.7rem
		}
	}
}

.bottom-info__discount-btn {
	margin: 4rem 0 0 6.9rem;
}

.bottom-info__column__left {
	.bottom-info__countdown {
		margin: 0.7rem 0 0 4.6rem;
	}
}

.bottom-info__column__right {
	position: relative
	
	&:after {
		content: "";
		display: block;
		position: absolute;
		background: url("../images/figure-2.png") no-repeat
		-webkit-background-size: cover
		background-size: cover
		width: 48rem;
		height: rem(580);
		top: -0.4rem;
		left: -1.2rem;
	}
}

.bottom-info__logo {
	position: relative
	z-index: 5
	width: 21.65rem;
	margin: 2rem 0 0 2rem;
}

.bottom-info__img-1 {
	width: 12.85rem;
	position: relative;
	z-index: 5;
	margin: -3rem 0 0 16.4rem;
}
.bottom-info__img-2{
	position: absolute;
	z-index: 5;
	top: -0.7rem;
	right: -7.6rem;
	width: 18.75rem;
}