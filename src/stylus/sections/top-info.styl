
.top-info {
	padding: 1.9rem 0 4rem
	position: relative
	
	&:after {
		content: "";
		display: block;
		position: absolute;
		background: url("../images/bg-1.png") no-repeat
		-webkit-background-size: cover
		background-size: cover
		width: rem(1092);
		height: rem(700);
		top: 1.9rem
		left: 0
	}
	
	&:before {
		content ""
		display: block;
		position: absolute;
		background: url("../images/figure-1.png") no-repeat
		-webkit-background-size: cover
		background-size: cover
		top: 2.5rem;
		right: 0.24rem;
		width: rem(821);
		height: rem(500);
		z-index: 5
	}
}

.info__wrap {
	display: flex
}
.info__column{
	width: 50%
	position: relative
}
.top-info__column__left {
	position: relative
	width: rem(490)
	margin-left: 11rem
}
.top-info__column__right{
	position: relative
	width: rem(490)
}
.top-info__img-1 {
	position: absolute
	left: -19.5rem;
	top: -1.25rem;
}

.info__title {
	text-align: center
	
	h1 {
		text-transform: uppercase
	}
	
	p {
		text-transform: none
		font-size: rem(24);
		line-height: rem(28);
		color: rgba(255, 255, 255, 0.5);
		font-weight: normal
		margin-top: 0.3rem
	}
}
.top-info__title{
	padding-left: 1.8rem
}
.top-info__logo {
	width: rem(400)
	margin: 3.1rem 0 0 3.7rem;
}

.top-info__products {
	margin-top: 1.6rem
	margin-left: 1.8rem
}
.info__products {
	display: flex
	margin-top: 1.6rem
}

.info__product-item {
	position: relative
	cursor: pointer
	transition transform 300ms ease-in-out
	&:nth-child(1) {
		margin-right: 0.8rem
	}
	
	&:nth-child(2) {
		.top-info__price {
			margin: -1.1rem 0 0 -1.3rem;
		}
	}
	
	&:before {
		content: "";
		display: block;
		position: absolute;
		top: 0
		left: 0
		width: rem(148);
		height: rem(160);
		background: #18533B;
		box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
		border-radius: rem(10);
	}
	&:hover{
		transform scale(1.05)
	}
}

.info__product-item-title {
	text-align: center
	position: absolute;
	width: 8.2rem
	top: 3.9rem;
	left: -4.1rem;
	transform: rotate(-90deg)
	
	h3 {
		font-weight: 300
		color: #ffffff
		text-transform: uppercase
		font-size: rem(16);
		line-height: rem(19);
	}
	
	p {
		font-weight: 700
		color: #ffffff
		font-size: rem(16);
		line-height: rem(19);
		text-transform: uppercase
	}
}

.info__product-item-img {
	position: relative
	z-index: 5
	width: 14.8rem;
	margin: -0.5rem 0 0 1rem;
}

.info__price {
	display: flex
	align-items: baseline
	margin: -0.5rem 0 0 -1.3rem;
}

.old-price {
	position: relative
	color: #D3D3D3
	font-size: rem(18);
	line-height: rem(21);
	margin-right: 0.7rem
	
	&:after {
		content: "";
		display: block;
		position: absolute;
		width: 100%
		height: 2px
		background: #FFEFA9
		left: 0
		top: 50%
		transform translate(0, -50%)
	}
}

.new-price {
	color: #FFEFA9
	font-size: rem(30);
	line-height: rem(35);
	font-weight: bold
}

.top-info__discount-btn {
	display: flex
	justify-content: center
	align-items: center
	margin-top: 2.4rem
}

.top-info__video {
	margin: 12.5rem 0 0 -0.8rem;
}
.info__img-2{
	width: 34.67rem;
	position: absolute;
	top: -0.8rem;
	left: 3.1rem;
}
.info__img-3{
	width: 13.28rem;
	position: absolute;
	top: -0.6rem;
	right: -13.6rem;
}