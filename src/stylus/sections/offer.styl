.offer {
	position: relative
	z-index: 5
	background: linear-gradient(180deg, #12412F 0%, #24684D 100%);
	box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.offer__wrap {
	display: flex
	justify-content: space-between
}

.offer__column-left {
	width: 45%
	display: flex
}

.offer__img-1 {
	width: rem(360)
	margin-top: 2.7rem
	
	h3 {
		width: rem(300)
		text-align: center
		font-size: rem(24);
		line-height: rem(28);
		text-transform: uppercase
		font-weight: 400
		color: rgba(255, 255, 255, 0.3);
	}
	
	img {
		margin-top: 0.7rem
	}
}

.offer__img-2 {
	width: 10.19rem;
	margin: 0.4rem 0 0 -2rem;
}

.offer__column-right {
	width: 52.6%
}

.offer__title {
	margin-top: 1.3rem
}

.offer__column__wrap {
	display: flex
	margin-top: 2.85rem
}

.offer__info {
	width: 100%
	max-width: rem(240)
	
	p {
		font-size: rem(16);
		line-height: rem(19);
		color: #ffffff
		margin-bottom: 1.2rem
		
		&:last-child {
			margin-top: 2.4rem
			margin-bottom: 0
		}
	}
}

.offer__form {
	margin-left: 3.2rem
}

.order-form {
	input {
		width: rem(280)
		background: #FFFFFF;
		border-radius: rem(10);
		padding: 1rem 1.25rem;
		font-family: 'Roboto', sans-serif;
		font-size: rem(18);
		line-height: rem(19);
		font-weight: 300
		color: #111111
		margin-bottom: 0.75rem
		
		&::placeholder {
			font-family: 'Roboto', sans-serif;
			font-size: rem(18);
			line-height: rem(19);
			font-weight: 300
			color: #111111
		}
	}
	
	button {
		border: none
		background: transparent
		width: rem(260)
		margin: 1.8rem auto 0
		padding: 0.8rem 4rem
		display: inline-block
	}
}
.form-item{
	display: flex
	justify-content: center
	align-items: center
}
.offer__price {
	display: flex
	justify-content: space-between
	align-items: baseline
	margin-top: 3rem
	.old-price{
		font-size: rem(24);
		line-height: rem(28);
	}
	.new-price{
		font-size: rem(36);
		line-height: rem(42);
	}
}