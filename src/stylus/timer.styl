

.time {
	display: flex
	justify-content: space-between
	align-items: center
	li {
		display: flex
		justify-content: center
		align-items: center
		color: #FFEFA9;
		font-family: 'Roboto Condensed', sans-serif;
		font-size: rem(17);
		line-height:  rem(20)
		font-weight: 700
		text-transform: uppercase;
		width: rem(24);
		height: rem(24);
		//margin: 0 0.4rem
		&:last-child {
			margin-right: 0
			display: none
		}
	}
	.time-bg__dot {
		color: #FFEFA9;
		font-family: 'Roboto Condensed', sans-serif;
		font-size: rem(17);
		line-height:  rem(20)
		font-weight: 700
		width: rem(12);
		height: rem(24);
	}
}


.countdown{
	width: 100%
	max-width: rem(335)
	margin: 0.85rem auto 0
	display: flex
	align-items: center
}
.countdown-title {
	text-align: center
	margin-right: 0.6rem
	h3 {
		font-family: 'Roboto Condensed', sans-serif;
		color: #fff;
		font-size: rem(17);
		line-height:  rem(20)
		font-weight: 400;
	}
}