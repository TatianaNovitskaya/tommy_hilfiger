.footer__wrap{
	padding: 0.3rem 0 0.7rem;
	background: #113D2C
	display: flex
	align-items: center
	justify-content: center
}
	.address{
		text-align: center
		margin-right: 0.8rem
		p{
			font-size: rem(14);
			line-height: rem(16)
			color: rgba(255, 255, 255, 0.7);
		}
	}
.create{
	text-align: center
	p{
		font-size: rem(14);
		line-height: rem(16)
		color: rgba(255, 255, 255, 0.7);
	}
	a{
		display: inline-block
		font-size: rem(14);
		line-height: rem(16)
		color: rgba(255, 255, 255, 0.7);
		text-decoration: none
		position: relative
		 &:after {
		     content: "";
		     display: block;
		     position: absolute;
			 background: rgba(255, 255, 255, 0.7)
			 width: 0
			 height: 1px
			 left: 0
			 right: 0
			 bottom: -2px
			 transition width 400ms ease-in-out
		   }
		
	}
	&:hover{
		a{
			&:after{
				width: 100%
			}
		}
	}
}